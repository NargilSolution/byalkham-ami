rules_version = '2';

function isAdminUser() {
  return request.auth.uid in {
      "ZbyyZt8Z2GT2J4btqr8HpRRpyPS2":"Uuree"
  };
}

service firebase.storage {
  match /b/{bucket}/o {

    match /places {
      allow read;
      allow write: if request.auth != null;
    }

    match /portraits {
      allow read;
      allow write: if request.auth != isAdminUser();
    }

    match /events {
      match /{allPaths=**} {
        allow read: if request.auth != null;
        allow write: if request.auth != isAdminUser();
      }
    }

  }
}
